#!/bin/sh
case "$1" in
        start)
                echo "Starting RPC Portmap"
                /sbin/portmap
                ;;

        stop)
                echo "Stopping Portmap"
                killall -9 portmap
                ;;

        restart)
                $0 stop
                sleep 1
                $0 start
                ;;

        *)
                echo "Usage: $0 {start|stop|restart}"
                exit 1
        ;;

esac
