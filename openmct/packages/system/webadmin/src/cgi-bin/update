#!/bin/sh

eval "`/sbin/proccgi $*`"

echo Content-Type: text/plain
echo
DLDIR=/tmp/update.$$
mkdir $DLDIR
echo "Getting update script from $FORM_host"
wget -q -P $DLDIR http://$FORM_host/update
if [ -r $DLDIR/update ]; then
 . $DLDIR/update $FORM_host $FORM_revision "$FORM_action"
 /bin/rm -rf /tmp/update.$$
else
 echo "ERROR: Couldn't execute update script"
fi
