#! /bin/sh
#
# description: Starts dropbear SSH daemon
#

#
# /etc/init.d/telnetd
#

exe=/sbin/dropbear
cfg=/etc/sysconfig/sshd

[ ! -x ${exe} -o ! -f ${cfg} ] && exit 0

# source function library
. /etc/init.d/functions

# source config
. ${cfg}

start() {
 echo -n "sshd - Start dropbear SSH daemon ..........."

 [ ! -d /var/log ] && mkdir -p /var/log

 if [ ! -x ${exe} -o ! -f ${cfg} ]; then
  failure
  exit 1
 fi

 if [ "${START}" == "no" ]; then
  skipped
  exit 0
 else
  ${exe} $OPTIONS
  rc=$?

  if [ $rc -eq 0 ]; then
   success
  else
   failure
  fi
 fi
}

stop() {
 echo -n "sshd - Stopping dropbear SSH daemon ........ "

 if [ ! -x ${exe} -o ! -f ${cfg} ]; then
  failure
  exit 1
 else
  killall -q $(basename ${exe})
 fi
}

[ "$2" == "--force" ] && START=yes

case "$1" in
 start)
  start
  ;;
 stop)
  stop
  ;;
 status)
  _status
  ;;
 reload)
  killall -q -SIGHUP telnetd
  ;;
 *)
  echo "Usage: $0 {start [--force]|stop [--force]|reload|status}"
esac

exit $rc
