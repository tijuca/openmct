#! /bin/sh
#
# description: Starts PPTP daemon
#

#
# /etc/init.d/pptpd
#

exe=/sbin/pptpd
cfg=/etc/sysconfig/pptpd

[ ! -x ${exe} -o ! -f ${cfg} ] && exit 0

# source function library
. /etc/init.d/functions

# source config
. ${cfg}

start() {
 echo -n "pptpd - Start PPTP daemon ..........."

 [ ! -d /var/log ] && mkdir -p /var/log

 if [ ! -x ${exe} -o ! -f ${cfg} ]; then
  failure
  exit 1
 fi

 if [ "${START}" == "no" ]; then
  skipped
  exit 0
 else
  ${exe} $OPTIONS
  rc=$?

  if [ $rc -eq 0 ]; then
   success
  else
   failure
  fi
 fi
}

stop() {
 echo -n "pptpd - Stopping PPTP daemon ........ "

 if [ ! -x ${exe} -o ! -f ${cfg} ]; then
  failure
  exit 1
 else
  killall -q $(basename ${exe})
 fi
}

[ "$2" == "--force" ] && START=yes

case "$1" in
 start)
  start
  ;;
 stop)
  stop
  ;;
 status)
  _status
  ;;
 reload)
  killall -q -SIGHUP pptpd
  ;;
 *)
  echo "Usage: $0 {start [--force]|stop [--force]|reload|status}"
esac

exit $rc
